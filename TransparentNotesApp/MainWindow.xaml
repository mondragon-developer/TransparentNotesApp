<Window x:Class="TransparentNotesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transparent Notes by MDragon" Height="300" Width="600"
        MinWidth="475" MinHeight="100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Opacity="0.7"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Controls Row: Always on Top with numeric inputs -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="10">
            <!-- Checkbox for Always on Top -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="AlwaysOnTopCheckBox" VerticalAlignment="Center" Checked="AlwaysOnTopCheckBox_Checked" Unchecked="AlwaysOnTopCheckBox_Unchecked"/>
                    <TextBlock Text="Always on Top (Permanent)" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black" FontSize="12"/>
                </StackPanel>
                <TextBlock Text="Tip: Press Alt+P to toggle pass-through mode" VerticalAlignment="Center" Margin="25,2,0,0" Foreground="Gray" FontSize="9"/>
            </StackPanel>
            
            <!-- Opacity Control -->
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Opacity:" VerticalAlignment="Center" Foreground="Black" FontSize="12" Margin="0,0,5,0"/>
                <TextBox x:Name="OpacityTextBox" Width="50" Height="24" VerticalAlignment="Center" PreviewKeyDown="OpacityTextBox_PreviewKeyDown"/>
            </StackPanel>
            
            <!-- Font Size Control -->
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Font Size:" VerticalAlignment="Center" Foreground="Black" FontSize="12" Margin="0,0,5,0"/>
                <TextBox x:Name="FontSizeTextBox" Width="50" Height="24" VerticalAlignment="Center" PreviewKeyDown="FontSizeTextBox_PreviewKeyDown"/>
            </StackPanel>
        </StackPanel>
        
        <TabControl Grid.Row="1">
            <TabItem Header="Text">
                <DockPanel>
                    <!-- Formatting Toolbar -->
                    <ToolBar DockPanel.Dock="Top" Background="#F0F0F0">
                        <ToggleButton x:Name="BoldButton" Content="B" FontWeight="Bold"
                                      Width="30" Click="BoldButton_Click" ToolTip="Bold"/>
                        <Separator/>
                        <Button x:Name="BulletListButton" Width="30"
                                Click="BulletListButton_Click" ToolTip="Bullet List">
                            <TextBlock Text="&#x2022;" FontSize="14"/>
                        </Button>
                        <Button x:Name="NumberedListButton" Content="1." Width="30"
                                Click="NumberedListButton_Click" ToolTip="Numbered List"/>
                    </ToolBar>

                    <!-- RichTextBox replaces TextBox -->
                    <RichTextBox x:Name="NotesRichTextBox"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 SelectionChanged="NotesRichTextBox_SelectionChanged">
                        <FlowDocument/>
                    </RichTextBox>
                </DockPanel>
            </TabItem>
            <TabItem Header="Image">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="path_to_your_image.jpg" Width="200" Height="200"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- Transparent resize handle overlay in bottom-right corner -->
        <Rectangle x:Name="ResizeArea" Grid.Row="0" Grid.RowSpan="2" Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="Transparent" Cursor="SizeNWSE" MouseDown="ResizeArea_MouseDown" MouseMove="ResizeArea_MouseMove" MouseUp="ResizeArea_MouseUp" Margin="0,0,0,0"/>
    </Grid>
</Window>
