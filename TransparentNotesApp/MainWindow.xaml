<Window x:Class="TransparentNotesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Transparent Notes by MDragon" Height="300" Width="600"
        MinWidth="475" MinHeight="100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Opacity="0.7"
        ShowInTaskbar="False"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Controls Row: Draggable header with transparent backgrounds -->
        <Border Grid.Row="0" Background="#40E0E0E0" MouseDown="DragArea_MouseDown" Cursor="SizeAll" Padding="10,5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Always on Top Control -->
                <Border Background="#50FFFFFF" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="AlwaysOnTopCheckBox" VerticalAlignment="Center" Checked="AlwaysOnTopCheckBox_Checked" Unchecked="AlwaysOnTopCheckBox_Unchecked"/>
                            <TextBlock Text="Always on Top" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black" FontSize="12"/>
                        </StackPanel>
                        <TextBlock Text="Alt+P: Pass-through | Alt+S: Show | Alt+H: Hide" VerticalAlignment="Center" Margin="20,2,0,0" Foreground="Gray" FontSize="8"/>
                    </StackPanel>
                </Border>

                <!-- Opacity Control -->
                <Border Background="#50FFFFFF" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Opacity:" VerticalAlignment="Center" Foreground="Black" FontSize="12" Margin="0,0,5,0"/>
                        <TextBox x:Name="OpacityTextBox" Width="50" Height="24" VerticalAlignment="Center" PreviewKeyDown="OpacityTextBox_PreviewKeyDown"/>
                    </StackPanel>
                </Border>

                <!-- Font Size Control -->
                <Border Background="#50FFFFFF" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Font Size:" VerticalAlignment="Center" Foreground="Black" FontSize="12" Margin="0,0,5,0"/>
                        <TextBox x:Name="FontSizeTextBox" Width="50" Height="24" VerticalAlignment="Center" PreviewKeyDown="FontSizeTextBox_PreviewKeyDown" GotFocus="FontSizeTextBox_GotFocus"/>
                    </StackPanel>
                </Border>

                <!-- Zoom info -->
                <TextBlock Text="Ctrl+Wheel: Zoom" VerticalAlignment="Center" Foreground="Gray" FontSize="9"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" PreviewMouseWheel="TabControl_PreviewMouseWheel">
            <TabItem Header="Text">
                <DockPanel>
                    <!-- Formatting Toolbar - also serves as drag handle -->
                    <ToolBar DockPanel.Dock="Top" Background="#40E0E0E0" MouseDown="DragArea_MouseDown" Cursor="SizeAll">
                        <ToggleButton x:Name="BoldButton" Content="B" FontWeight="Bold"
                                      Width="30" Click="BoldButton_Click" ToolTip="Bold"/>
                        <Separator/>
                        <Button x:Name="BulletListButton" Width="30"
                                Click="BulletListButton_Click" ToolTip="Bullet List">
                            <TextBlock Text="&#x2022;" FontSize="14"/>
                        </Button>
                        <Button x:Name="NumberedListButton" Content="1." Width="30"
                                Click="NumberedListButton_Click" ToolTip="Numbered List"/>
                    </ToolBar>

                    <!-- RichTextBox replaces TextBox -->
                    <RichTextBox x:Name="NotesRichTextBox"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 SelectionChanged="NotesRichTextBox_SelectionChanged">
                        <FlowDocument/>
                    </RichTextBox>
                </DockPanel>
            </TabItem>
            <TabItem Header="Image">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="path_to_your_image.jpg" Width="200" Height="200"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Web">
                <DockPanel>
                    <!-- URL Bar -->
                    <Border DockPanel.Dock="Top" Background="#40E0E0E0" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="UrlTextBox" Grid.Column="0" Height="24" VerticalContentAlignment="Center"
                                     Text="https://" PreviewKeyDown="UrlTextBox_PreviewKeyDown"
                                     ToolTip="Enter URL and press Enter or click Go"/>
                            <Button Grid.Column="1" Content="Go" Width="40" Margin="5,0,0,0" Click="GoButton_Click"/>
                        </Grid>
                    </Border>
                    <!-- Web Content -->
                    <Grid AllowDrop="True" Drop="WebTab_Drop" Background="Transparent">
                        <TextBlock x:Name="WebHintText" Text="Enter URL above or drag and drop a link here" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" IsHitTestVisible="False"/>
                        <wv2:WebView2 x:Name="Browser" DefaultBackgroundColor="Transparent" NavigationCompleted="Browser_NavigationCompleted"/>
                    </Grid>
                </DockPanel>
            </TabItem>
        </TabControl>
        
        <!-- Corner resize handles only -->
        <Rectangle x:Name="ResizeTopLeft" Grid.Row="0" Grid.RowSpan="2" Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="#40000000" Cursor="SizeNWSE" MouseDown="ResizeEdge_MouseDown" MouseMove="ResizeEdge_MouseMove" MouseUp="ResizeEdge_MouseUp" Tag="TopLeft"/>
        <Rectangle x:Name="ResizeTopRight" Grid.Row="0" Grid.RowSpan="2" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Top" Fill="#40000000" Cursor="SizeNESW" MouseDown="ResizeEdge_MouseDown" MouseMove="ResizeEdge_MouseMove" MouseUp="ResizeEdge_MouseUp" Tag="TopRight"/>
        <Rectangle x:Name="ResizeBottomLeft" Grid.Row="0" Grid.RowSpan="2" Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Bottom" Fill="#40000000" Cursor="SizeNESW" MouseDown="ResizeEdge_MouseDown" MouseMove="ResizeEdge_MouseMove" MouseUp="ResizeEdge_MouseUp" Tag="BottomLeft"/>
        <Rectangle x:Name="ResizeBottomRight" Grid.Row="0" Grid.RowSpan="2" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="#40000000" Cursor="SizeNWSE" MouseDown="ResizeEdge_MouseDown" MouseMove="ResizeEdge_MouseMove" MouseUp="ResizeEdge_MouseUp" Tag="BottomRight"/>
    </Grid>
</Window>
